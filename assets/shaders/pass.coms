// Combined Shader

VertexInput {
    Binding 0 [PerVertex] { pos: vec4; }
}
VertexShader {
    RasterPosition = pos; col = vec4(1.0f, 1.0f, 1.0f, 1.0f);
}
FragmentShader {
    Target[0] = col;
}

Varyings VertexShader -> FragmentShader {
    col: vec4;
}

SpecConstant[VertexShader](0) ScreenAspectWH = 1.0f;
Uniform[VertexShader](0, 0) VertexPlacement {
    vec2 offs, scale;
}
